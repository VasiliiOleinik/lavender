      .box.flex-column
        h3.title  НАШІ ПЕРЕВАГИ
        .advantages-items.d-flex.ai-center.space-between
          .advantage-item.d-flex.flex-column.ai-center
            img(src="img/adv-1.png" alt="")
            span.advantage-item-title ВЛАСНЕ ВИРОБНИЦТВО
