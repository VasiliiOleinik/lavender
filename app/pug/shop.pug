extends blocks/_layout-simple
append content
  main.main.shop-page
    .simple-page-banner.shop
      .box.d-flex.ai-center.justify-center
        h1.simple-page-banner-title.ml-auto магазин
        a(href="/" class="cart-banner-info ml-auto d-flex ai-center justify-center")
          img(src="img/cart-icon.png" alt="" class="cart-ico")
          p
            span.cart-banner-info-summ 150.00 грн
            | /
            span.cart-banner-info-count 2 тов
          img(src="img/cart-right.png" alt="" class="cart-right")
    .box.d-flex.flex-column
      ul.breadcrumbs.d-flex.ai-center.flex-wrap
        li.breadcrumbs-item
          a(href="/") Головна
        li.breadcrumbs-item.separator /
        li.breadcrumbs-item.current Магазин
    section.products-box
      .box.ai-start
        ul.products-filter.d-flex.flex-column
          span.products-filter-mobile Букети
          li.products-filter-item
            a(href="/" class="d-flex ai-center justify-center") Усі_товари
          li.products-filter-item
            a(href="/" class="d-flex ai-center justify-center") Саджанці
          li.products-filter-item
            a(href="/" class="d-flex ai-center justify-center") Букети
          li.products-filter-item
            a(href="/" class="d-flex ai-center justify-center") Добрива
          li.products-filter-item.active
            a(href="/" class="d-flex ai-center justify-center") Мед
          li.products-filter-item
            a(href="/" class="d-flex ai-center justify-center") Набори
          li.products-filter-item
            a(href="/" class="d-flex ai-center justify-center") Олія
          li.li.products-filter-item
            a(href="/" class="d-flex ai-center justify-center") Саше Свічки
        select(class="products-filter-select")
          option(value="Усі_товари") Усі_товари
          option(value="Саджанці") Саджанці 
          option(value="Букети") Букети
          option(value="Добрива") Добрива
          option(value="Мед") Мед
          option(value="Набори") Набори
          option(value="Олія") Олія
          option(value="Саше Свічки") Саше Свічки
        .products-wrap.d-flex.flex-wrap
          .product-item.d-flex.flex-column
            .product-item-img.d-flex.justify-center.ai-center
              img(src="img/prod-1.png" alt="")
            .product-item-info.d-flex.flex-column
              span.product-item-name Олія Натуральна Лаванди (100мл)
              span.product-item-tag Олія
              span.product-item-price 900.00 грн
